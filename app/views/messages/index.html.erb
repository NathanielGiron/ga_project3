<h1>Chat</h1>

<div id="chat-box">
  <ul id="chat">
    <%= render :partial => 'message', collection: @messages %>
  </ul>
    
  <%= form_for Message.new, remote: true do |f| %>
    <%= f.text_field :body %>
    <%= f.hidden_field :user_id, value: current_user.id  %>
    <%= f.submit "Send", :class => 'submit btn btn-default' %>
  <% end %>
</div>

<%= subscribe_to "/messages/new" %>
 